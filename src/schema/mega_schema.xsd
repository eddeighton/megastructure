<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="EG">
		<xs:annotation>
			<xs:documentation>Comment describing your root element</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:choice>
				<xs:element name="Package" type="Package"/>
				<xs:element name="Host" type="Host"/>
				<xs:element name="Project" type="Project"/>
			</xs:choice>
		</xs:complexType>
	</xs:element>
	<xs:complexType name="Package">
		<xs:sequence>
			<xs:element name="Name" type="xs:string"/>
			<xs:element name="Repository" type="xs:string" minOccurs="0"/>
			<xs:element name="License" type="xs:string"/>
			<xs:element name="Description" type="xs:string" minOccurs="0"/>
			<xs:element name="Directories" minOccurs="0">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Include" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
						<xs:element name="Library" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="Files" type="Files" minOccurs="0"/>
			<xs:element name="Command" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="Host">
		<xs:complexContent>
			<xs:extension base="Package"/>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="Project">
		<xs:sequence>
			<xs:element name="Name" type="xs:string"/>
			<xs:element name="Host" type="xs:string"/>
			<xs:element name="Description" type="xs:string" minOccurs="0"/>
			<xs:element name="Package" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="Files" type="Files" minOccurs="0"/>
			<xs:element name="Build" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Name" type="xs:string"/>
						<xs:element name="CompilerFlags" type="xs:string"/>
						<xs:element name="LinkerFlags" type="xs:string"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="Run" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Name" type="xs:string"/>
						<xs:element name="Command" type="xs:string"/>
						<xs:element name="Argument" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="Defaults" minOccurs="0">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Fibers" minOccurs="0">
							<xs:complexType>
								<xs:sequence>
									<xs:element name="Stack" minOccurs="0">
										<xs:complexType>
											<xs:sequence>
												<xs:element name="Size" type="xs:unsignedInt" minOccurs="0"/>
											</xs:sequence>
										</xs:complexType>
									</xs:element>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="Files">
		<xs:sequence>
			<xs:element name="System" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="Include" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="Source" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="Library" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
